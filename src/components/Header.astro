<script>
  import recursos from "../../public/data/JMresource.json";
  const buscador: any | null = document.getElementsByClassName("search-navbar");
  const ITEMS = recursos.resources;

  function buscarPalabraClave(buscador:any) {
    const palabraClave = buscador.value.toLowerCase();
    // con el startswith es para que empiece igual
    let resultados = ITEMS.filter(
      (item) =>
        // Verificar si el nombre o la descripciÃ³n es exactamente igual a la palabra clave
        item.name.toLowerCase().startsWith(palabraClave) ||
        item.category.some((category) =>
          category.toLowerCase().startsWith(palabraClave)
        )
    );

    localStorage.setItem("buscador", JSON.stringify(resultados));
    
  }
  /*
  buscador.addEventListener('keyup', function(event:any) {
    if (event.key === 'Enter') {
      buscarPalabraClave();
    }
  });*/

  for (const item in buscador) {
    if (Object.hasOwnProperty.call(buscador, item)) {
      const element = buscador[item];
      element.addEventListener("keyup", function (event: any) {
        buscarPalabraClave(element);
        if (event.key === "Enter") {
          window.location.href = "/search-navbar";
        }
      });
    }
  }
</script>
