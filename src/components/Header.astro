---
import Search from "./Search";
import SearchMarc from "./Search";
---

<header
  class="sticky top-0 z-50 flex w-full min-h-16 bg-[#f1f5f9]/70 border border-t-0 border-x-0 border-b-1 border-[#a3a3a3]"
>
  <nav class="bg-[#f1f5f9] border-gray-200 dark:bg-[#13151a] w-full">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <img
          src="/favicon.svg"
          class="h-8 rounded-lg bg-[#13151a]"
          alt="JMresources Logo"
        />
        <span
          class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
          >JMR</span
        >
      </a>
      <div class="relative flex md:order-2 md:min-w-80">
        <div class="hidden md:block md:w-full">
          <SearchMarc client:load />
        </div>
        <button
          id="hamburguer"
          data-collapse-toggle="navbar-search"
          type="button"
          class="sticky top-16 inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
          aria-controls="navbar-search"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="w-5 h-5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 17 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 1h15M1 7h15M1 13h15"></path>
          </svg>
        </button>
      </div>
      <div
        class="items-center justify-between hidden w-full md:flex md:w-auto md:order-2"
        id="navbar-search"
      >
        <div class="relative mt-3 md:hidden">
          <SearchMarc client:load />
        </div>
        <button
          id="theme-toggle"
          type="button"
          class="mx-auto w-5 h-5 text-gray-500 dark:text-gray-400 dark:bg-[#13151a]/20 mt-2 rounded-lg text-sm"
        >
          <svg
            data-theme-toggle
            id="theme-toggle-dark-icon"
            class="hidden w-5 h-5"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
            ></path></svg
          >
          <svg
            data-theme-toggle
            id="theme-toggle-light-icon"
            class="hidden w-5 h-5 text-yellow-600"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
              fill-rule="evenodd"
              clip-rule="evenodd"></path></svg
          >
        </button>
      </div>
    </div>
  </nav>
</header>

