---
interface Props {
	name: string;
	description: string;
    link: string;
    image:string;
    category: string[];
    youtube: string[];
    github: string;
}

const { name, description, link, image, youtube, github, category } = Astro.props;
---

<div class="flex flex-col justify-between max-w-sm mx-auto min-h-80 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

    <img class="rounded-t-lg object-cover h-48 w-96" src={image} alt=`Imagen de ${name}` onerror="this.src='../../public/images/notFound.webp'" />
  <div class="p-5">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{name}</h5>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 text-pretty">{description}</p>
      
  </div>
  <div class="p-5">
    <a href={link} target="_blank" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-slate-800/80 dark:text-white/80 dark:hover:text-white  hover:text-slate-900 bg-[#d5c5ff]  rounded-lg hover:bg-[#d5c5ff]/80 focus:ring-4 focus:outline-none focus:ring-indigo-300 dark:bg-indigo-600 dark:hover:bg-indigo-700/80 dark:focus:ring-indigo-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-world-www" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" /><path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" /><path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" /><path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" /><path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" /><path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" /><path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" /></svg>
    </a>
  </div>
</div>
